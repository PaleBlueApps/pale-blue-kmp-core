<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:background="@drawable/bg_dialog_rounded"
              android:padding="24dp"
              android:gravity="center_horizontal">

    <TextView
            android:id="@+id/dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How do you like Paid?"
            android:textColor="#222222"
            android:textSize="22sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:layout_gravity="center_horizontal" />

    <TextView
            android:id="@+id/dialog_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="What could we do to improve your experience?"
            android:textColor="#222222"
            android:textSize="16sp"
            android:textStyle="normal"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:layout_gravity="center_horizontal" />

    <TextView
            android:id="@+id/positiveButtonText"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/bg_button_outline"
            android:gravity="center"
            android:text="ðŸ˜Š I really love it"
            android:textColor="#6200EE"
            android:textSize="16sp"
            android:textStyle="bold"
            android:clickable="true"
            android:focusable="true"/>

    <TextView
            android:id="@+id/negativeButtonText"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_button_outline"
            android:gravity="center"
            android:text="ðŸ˜’ It could be better"
            android:textColor="#6200EE"
            android:textSize="16sp"
            android:textStyle="bold"
            android:clickable="true"
            android:focusable="true"/>

</LinearLayout>